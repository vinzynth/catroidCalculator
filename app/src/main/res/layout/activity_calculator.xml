<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="catrobat.calculator.Calculator">

    <Button
        android:text="1"
        android:id="@+id/button_1"
        android:layout_marginTop="60dp"
        style="@style/ButtonStyle"
        android:layout_below="@+id/calculation"
        android:layout_alignParentStart="true" />

    <Button
        android:text="2"
        android:id="@+id/button_2"
        style="@style/ButtonStyle"
        android:layout_alignTop="@+id/button_1"
        android:layout_toEndOf="@+id/button_1" />

    <Button
        android:text="3"
        android:id="@+id/button_3"
        style="@style/ButtonStyle"
        android:layout_alignTop="@+id/button_2"
        android:layout_toEndOf="@+id/button_2" />

    <Button
        android:text="4"
        android:id="@+id/button_4"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_1"
        android:layout_alignStart="@+id/button_1" />

    <Button
        android:text="5"
        android:id="@+id/button_5"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_2"
        android:layout_toEndOf="@+id/button_4" />

    <Button
        android:text="6"
        android:id="@+id/button_6"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_3"
        android:layout_toEndOf="@+id/button_2" />

    <Button
        android:text="7"
        android:id="@+id/button_7"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="8"
        android:id="@+id/button_8"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_5"
        android:layout_toEndOf="@+id/button_7" />

    <Button
        android:text="9"
        android:id="@+id/button_9"
        style="@style/ButtonStyle"
        android:layout_above="@+id/button_eq"
        android:layout_alignStart="@+id/button_eq" />

    <Button
        android:text="0"
        android:id="@+id/button_0"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_7"
        android:layout_toEndOf="@+id/button_7" />


    <Button
        android:text="C"
        android:id="@+id/button_c"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_7"
        android:layout_alignParentStart="true" />

    <Button
        android:text="="
        android:id="@+id/button_eq"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_8"
        android:layout_toEndOf="@+id/button_8" />


    <Button
        android:text="+"
        android:id="@+id/button_add"
        style="@style/ButtonStyle"
        android:layout_above="@+id/button_sub"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="-"
        android:id="@+id/button_sub"
        style="@style/ButtonStyle"
        android:layout_above="@+id/button_mul"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="*"
        android:id="@+id/button_mul"
        style="@style/ButtonStyle"
        android:layout_above="@+id/button_div"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="/"
        android:id="@+id/button_div"
        style="@style/ButtonStyle"
        android:layout_below="@+id/button_9"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/calculation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/res"
        android:layout_above="@+id/button_3"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
